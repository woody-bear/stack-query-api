<div class="sql-editor_root">
    <h1>db 정보</h1>
    <div>
        <div>
            <h3>db명</h3>
            <p> <%= @databaseName %></p>
        </div>
    </div> 
    
    <hr>
    </br>
    
    <div>
        <h3>테이블값</h3>
        
        <% @tables_connection.each do |table| %>
            <div>
                <%= table %>
            </div>
        <% end %>
    </div> 
    
    <hr>
    </br>
    
    <div>
        <h3>테이블값( 좀더 자세히/ 컬럼명 & 속성 - 진행중)</h3>
        <% @tables.each do |table| %>
            <p>
                <%= table.first[0] %>
                <ul>
                  <li>
                    <%= table.first[1][0] %>
                  </li>
                  <li>
                    <%= table.first[1][1] %>
                  </li>
                  <li>
                    <%= table.first[1][2] %>
                  </li>
                  <li>
                    <%= table.first[1][3] %>
                  </li>
                </ul>
            </p>
        <% end %>
    </div> 

    <hr>
    </br>
    
    <div>
        <h3>쿼리 저장소_최근 5개 표시 (진행중)</h3>
        <% @querys_sended.each do |q| %>
            <p>
                <%= q.query %>
            </p>
            <p>
              작성일 :  <%= q.created_at.strftime("%Y-%m-%d") %>
            </p>
        <% end %>
    </div>

    <%= form_with url: "/sql_editor", method: :post, html: {target: 'result_frame'} do |form| %>
        <div class="form-group">
            <%= form.text_area :message, size: "150x5" %>
            <%= form.submit "전송", class: 'btn btn-primary btn-lg' %>
        </div>
    <% end %>

    <iframe name="result_frame" width="100%" height="1000"></iframe>
</div>